    "@types/amqplib": "^0.10.1",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
